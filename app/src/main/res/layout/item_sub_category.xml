<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="@dimen/dp_10"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#94B403"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Type"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="MRP"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Discount"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_bg_white"
                android:elevation="4dp"
                android:gravity="center"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="500"
                android:textColor="@color/colorGreen"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView6"
                app:layout_constraintStart_toEndOf="@+id/textView8"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:id="@+id/spinner_type"
                android:layout_width="42dp"
                android:layout_height="22dp"
                android:layout_marginVertical="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/ic_dropdown_green"
                android:elevation="@dimen/dp_10" />

            <EditText
                android:id="@+id/et_mrp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_bg_white"
                android:elevation="4dp"
                android:gravity="center"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="500"
                android:textColor="@color/colorGreen"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/et_discount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_bg_white"
                android:elevation="4dp"
                android:gravity="center"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="10"
                android:textColor="@color/colorGreen"
                android:textSize="12sp" />

            <Spinner
                android:id="@+id/spinner_discount"
                android:layout_width="42dp"
                android:layout_height="22dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:background="@drawable/ic_dropdown_green"
                android:elevation="@dimen/dp_10" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_description"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:background="@drawable/round_bg_white"
                android:elevation="4dp"
                android:layout_marginHorizontal="5dp"
                android:gravity="center"
                android:hint="Description Of Product"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textColor="@color/colorGreen"
                android:textColorHint="@color/colorGreen"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switch_inStock"
                        android:layout_width="0dp"
                        android:layout_height="22dp"
                        android:buttonTint="#263852"
                        android:layout_weight="1"
                        app:layout_constraintBottom_toBottomOf="@+id/sp1"
                        app:layout_constraintStart_toEndOf="@+id/sp1"
                        app:layout_constraintTop_toTopOf="@+id/sp1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:ellipsize="marquee"
                        android:text="In Stock"
                        android:textColor="#94B403"
                        android:textSize="12sp"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_delete"
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:padding="4dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_c_delete" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Delete"
                        android:textColor="#94B403"
                        android:textSize="12sp" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>


