<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/curved_background"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">


        <EditText
            android:id="@+id/et_pname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/custom_edittext_curve"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical|top"
            android:hint="Product Name"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/black" />


        <LinearLayout
            android:id="@+id/ll_product_category_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:background="@drawable/custom_edittext_curve"

            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/tv_product_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_regular"
                android:hint="Category"
                android:textSize="13sp"

                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_drop_down"
                app:tint="@color/colorGrey" />
        </LinearLayout>

        <Spinner
            android:id="@+id/sp_product_category"
            style="@style/spinner_style"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:popupBackground="@drawable/outline_spinner"
            android:popupElevation="10dp"
            android:spinnerMode="dropdown"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/et_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/custom_edittext_curve"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical|top"
            android:hint="Unit(e.g. KG,PC etc)"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="15dp"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/et_base_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/custom_edittext_curve"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical|top"
            android:hint="Base Unit(e.g. KG,PC etc)"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="15dp"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/et_base_unit_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/custom_edittext_curve"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical|top"
            android:hint="Base Unit Price"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="15dp"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/black" />


        <EditText
            android:id="@+id/et_minimum_qty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/custom_edittext_curve"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical|top"
            android:hint="Minimum Qty"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="15dp"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/black" />


        <EditText
            android:id="@+id/et_unit_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/custom_edittext_curve"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical|top"
            android:hint="Unit price"
            android:imeOptions="actionNext"
            android:inputType="number"

            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="15dp"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/et_purchase_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/custom_edittext_curve"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical|top"
            android:hint="Purchase price"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="15dp"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/et_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/custom_edittext_curve"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical|top"
            android:hint="Discount"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="15dp"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/ll_discount_type_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:background="@drawable/custom_edittext_curve"

            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/tv_discount_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_regular"
                android:hint="Amount"
                android:textSize="13sp"

                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_drop_down"
                app:tint="@color/colorGrey" />
        </LinearLayout>

        <Spinner
            android:id="@+id/sp_discount_type"
            style="@style/spinner_style"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:popupBackground="@drawable/outline_spinner"
            android:popupElevation="10dp"
            android:spinnerMode="dropdown"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/et_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/custom_edittext_curve"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical|top"
            android:hint="Description"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="15dp"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/black" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp_20"

            android:fontFamily="@font/poppins_regular"
            android:gravity="start"
            android:paddingHorizontal="@dimen/dp_10"
            android:text="Thumbnail Image"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_thumb_add_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="start"
            android:src="@drawable/ic_input_add" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_thumb_delete"
            android:layout_width="70dp"
            android:layout_height="wrap_content"

            android:layout_gravity="start"
            android:background="@color/colorRed"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="Delete"
            android:textColor="@color/white"

            android:textSize="13sp" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp_20"

            android:fontFamily="@font/poppins_regular"
            android:gravity="start"
            android:paddingHorizontal="@dimen/dp_10"
            android:text="Gallary images"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp">

            <LinearLayout
                android:id="@+id/parent_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_add_image"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/ic_input_add" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/btnAddProduct"
            android:layout_width="@dimen/dp_190"
            android:layout_height="@dimen/dp_50"
            android:layout_marginVertical="@dimen/dp_20"
            android:background="@drawable/ic_c_green_rectangle"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="Add Product"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/white" />
    </LinearLayout>
</ScrollView>