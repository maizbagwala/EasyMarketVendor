<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#263852">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingVertical="@dimen/dp_10">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/splash_logo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_20"
            android:background="#263852"
            android:orientation="vertical">

            <LinearLayout
                style="@style/nav_ll_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    style="@style/nav_image_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_nav_dashboard" />

                <TextView
                    android:id="@+id/nav_dashboard"
                    style="@style/nav_text_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dashboard" />

            </LinearLayout>

            <LinearLayout
                style="@style/nav_ll_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    style="@style/nav_image_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_nav_store" />

                <TextView
                    android:id="@+id/nav_store_open"
                    style="@style/nav_text_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Store Open" />

            </LinearLayout>


            <LinearLayout
                style="@style/nav_ll_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    style="@style/nav_image_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_nav_delivery" />

                <TextView
                    android:id="@+id/nav_delivery_slots"
                    style="@style/nav_text_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="delivery slots" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_order_history"
                style="@style/nav_ll_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    style="@style/nav_image_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_nav_order_history" />

                <TextView
                    android:onClick="onNavClick"
                    android:id="@+id/nav_order_history"
                    style="@style/nav_text_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="order history" />

            </LinearLayout>


            <LinearLayout
                style="@style/nav_ll_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    style="@style/nav_image_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_nav_delivery_status" />

                <TextView
                    android:id="@+id/nav_delivery_status"
                    style="@style/nav_text_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="delivery status" />

            </LinearLayout>


            <LinearLayout
                style="@style/nav_ll_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    style="@style/nav_image_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_nav_offer_creation" />

                <TextView
                    android:id="@+id/nav_offer_creation"
                    style="@style/nav_text_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="offer creation" />

            </LinearLayout>


            <LinearLayout
                style="@style/nav_ll_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    style="@style/nav_image_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_nav_profile" />

                <TextView
                    android:id="@+id/nav_my_profile"
                    style="@style/nav_text_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="my profile" />

            </LinearLayout>


            <LinearLayout
                style="@style/nav_ll_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    style="@style/nav_image_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_nav_delivery_person" />

                <TextView
                    android:id="@+id/nav_my_delivery_person"
                    style="@style/nav_text_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="my delivery person" />

            </LinearLayout>


            <LinearLayout
                style="@style/nav_ll_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    style="@style/nav_image_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_nav_how_it_works" />

                <TextView
                    android:id="@+id/nav_how_it_works"
                    style="@style/nav_text_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="how it works" />


            </LinearLayout>


            <LinearLayout
                style="@style/nav_ll_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    style="@style/nav_image_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_nav_about_us" />

                <TextView
                    android:id="@+id/nav_about_us"
                    style="@style/nav_text_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="about us" />

            </LinearLayout>


            <LinearLayout
                style="@style/nav_ll_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    style="@style/nav_image_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_nav_tc" />

                <TextView
                    android:id="@+id/nav_term"
                    style="@style/nav_text_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="t &amp; c" />

            </LinearLayout>


            <LinearLayout
                style="@style/nav_ll_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    style="@style/nav_image_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_nav_logout" />

                <TextView
                    android:id="@+id/nav_logout"
                    style="@style/nav_text_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="logout" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</ScrollView>