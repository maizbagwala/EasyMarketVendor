<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:background="@drawable/corner_view"
    android:padding="10dp">

    <TextView
        android:id="@+id/position_delivery_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="1"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_driver"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/user"
        app:layout_constraintStart_toEndOf="@+id/position_delivery_person"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_delivery_person_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Akshay Gupta"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_driver"
        app:layout_constraintStart_toEndOf="@+id/iv_driver"
        app:layout_constraintTop_toTopOf="@id/iv_driver" />


</androidx.constraintlayout.widget.ConstraintLayout>