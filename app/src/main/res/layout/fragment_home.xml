<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HomeFragment">

    <FrameLayout
        android:id="@+id/frag_host_home"
        android:name="com.dexterapps.easymarketvendor.home.DashboardTabFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/b_tab" />

    <LinearLayout
        android:id="@+id/b_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/b_tab_dashboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#94B403"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:paddingVertical="15dp">

            <ImageView
                android:id="@+id/b_tab_dashboard_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="14dp"
                android:src="@drawable/ic_nav_dashboard" />

            <TextView
                android:id="@+id/b_tab_dashboard_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/b_tab_order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/custom_border_bg_square"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:paddingVertical="15dp">

            <ImageView
                android:id="@+id/b_tab_order_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="14dp"
                android:src="@drawable/ic_nav_dashboard_green" />

            <TextView
                android:id="@+id/b_tab_order_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Orders"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>