<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".myDeliveryPerson.MyDeliveryPersonFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_my_delivery_person"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_above="@id/btn_add_delivery_person"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        tools:itemCount="3"
        tools:listitem="@layout/item_view_order_products" />

    <TextView
        android:id="@+id/btn_add_delivery_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorGreen"
        android:gravity="center"
        android:paddingVertical="10dp"
        android:text="Add Delivery Person"
        android:textColor="@color/white"
        android:textSize="18sp" />
</RelativeLayout>