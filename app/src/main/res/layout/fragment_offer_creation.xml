<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".offerCreation.OfferCreation">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"

        android:background="@drawable/custom_border_bg"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:fontFamily="@font/poppins_regular"
                android:text="Offer Code"

                android:textColor="@color/black"
                android:textSize="13sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edit_text_border_bg"
                android:hint="NEWYEAR100"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:textColor="@color/colorGreen"
                android:textColorHint="@color/colorGreen" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"


                android:fontFamily="@font/poppins_regular"
                android:text="Offer Name"

                android:textColor="@color/black"
                android:textSize="13sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edit_text_border_bg"
                android:hint="NEWYEAR100"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:textColor="@color/colorGreen"
                android:textColorHint="@color/colorGreen" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"


                android:fontFamily="@font/poppins_regular"
                android:text="Offer Name"

                android:textColor="@color/black"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_edit_text_border_bg"
                    android:hint="01/02/2021"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:textColor="@color/colorGreen"
                    android:textColorHint="@color/colorGreen" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_edit_text_border_bg"
                    android:hint="30/02/2021"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:textColor="@color/colorGreen"
                    android:textColorHint="@color/colorGreen" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"


                android:fontFamily="@font/poppins_regular"
                android:text="Discount"

                android:textColor="@color/black"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_delivery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/rb_bg"
                        android:checked="true"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="Percentage (%)"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/rb_pickup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/rb_bg"
                        android:fontFamily="@font/poppins_regular"
                        android:paddingLeft="10dp"
                        android:text="AUD ($)"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@color/black" />
                </RadioGroup>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"


                android:fontFamily="@font/poppins_regular"
                android:text="Minimum order value"

                android:textColor="@color/black"
                android:textSize="13sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edit_text_border_bg"
                android:hint="50$"
                android:inputType="number"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:textColor="@color/colorGreen"
                android:textColorHint="@color/colorGreen" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"


                android:fontFamily="@font/poppins_regular"
                android:text="Off upto"

                android:textColor="@color/black"
                android:textSize="13sp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edit_text_border_bg"
                android:hint="10 % Off Upto 20$ "
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:textColor="@color/colorGreen"
                android:textColorHint="@color/colorGreen" />

            <TextView
                android:id="@+id/btnRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="40dp"
                android:layout_marginVertical="@dimen/dp_20"
                android:background="@drawable/ic_c_green_rectangle"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="Generate Offer"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>